<UserControl x:Class="wdos.builtIn.StartupUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wdos.builtIn"
             mc:Ignorable="d"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Width="160" Height="160" Source="/source/logo.png" Stretch="UniformToFill"/>
            <hc:LoadingCircle IsRunning="True" Margin="0, 70, 0, 0" Width="64" Height="64"/>
        </StackPanel>
    </Border>
</UserControl>
