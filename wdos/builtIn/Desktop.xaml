<UserControl x:Class="wdos.builtIn.Desktop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wdos.builtIn"
             mc:Ignorable="d"
             xmlns:aska="clr-namespace:Aska.WPF.Controls;assembly=Aska.WPF"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Storyboard x:Key="ModernTaskBar">
            
        </Storyboard>
    </UserControl.Resources>
    <Grid>
        <Image Source="/source/img/win10.jpg" Stretch="UniformToFill"/>
        <Grid VerticalAlignment="Bottom">
            <Border Height="60" Margin="10" Background="Black" CornerRadius="10"
                    Opacity="0.5">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="-4" BlurRadius="15" Color="Black"/>
                </Border.Effect>
            </Border>
            <DockPanel VerticalAlignment="Center" Margin="10,0">
                <aska:FishEyePanel Height="50" Width="200" Margin="10" DockPanel.Dock="Left">
                    <Button x:Name="StartMenuBtn" Style="{StaticResource PulseButton}" Width="40" Height="40" Margin="5,0">
                        <Image Source="/source/logo-blue.png" Stretch="UniformToFill"/>
                    </Button>
                    <Button Style="{StaticResource PulseButton}" Width="40" Height="40" Margin="5,0">
                        <Grid>
                            
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource PulseButton}" Width="40" Height="40" Margin="5,0">
                        <Image Source="/source/logo-green.png" Stretch="UniformToFill"/>
                    </Button>
                    <Button Style="{StaticResource PulseButton}" Width="40" Height="40" Margin="5,0">
                        <Image Source="/source/logo-green.png" Stretch="UniformToFill"/>
                    </Button>
                </aska:FishEyePanel>
                <TextBlock/>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
